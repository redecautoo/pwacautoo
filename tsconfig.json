{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@": [
        "./src"
      ],
      "@assets": [
        "./src/assets"
      ],
      "@assets/*": [
        "./src/assets/*"
      ]
    },
    // ===== STRICT MODE PARCIAL =====
    // Ativado gradualmente para não quebrar o código existente
    "strict": false, // Mude para true quando estiver pronto
    "noImplicitAny": true, // ✅ ATIVADO - força tipagem explícita
    "strictNullChecks": false, // Ative depois de corrigir erros de noImplicitAny
    "noUnusedParameters": true, // ✅ ATIVADO - detecta parâmetros não usados
    "noUnusedLocals": true, // ✅ ATIVADO - detecta variáveis não usadas
    // Outras configurações úteis
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}